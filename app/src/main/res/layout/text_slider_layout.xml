<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/idRLSlider"
    android:layout_width="match_parent"
    android:background="@color/purple_200"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <!--text view for displaying
        our heading-->
    <TextView
        android:id="@+id/idTVtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:text="See your family's Mutual Funds"
        android:textAlignment="center"
        android:fontFamily="sans-serif-light"
        android:textSize="20sp"
        android:textStyle="bold" />



    <!--text view for displaying our
        slider description-->
    <TextView
        android:id="@+id/idTVheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/idTVtitle"
        android:textColor="@color/black"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:text="Consolidate and get a health report of your entire family's Mutul Fund portfolio."
        android:textAlignment="center"
        android:textSize="15sp" />

</RelativeLayout>
