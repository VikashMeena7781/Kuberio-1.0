<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Conatiner"
        android:layout_marginBottom="?attr/actionBarSize"/>
    <!--    //agr height match parent kr dee to vo puri screen ko le lega-->
    <!--    // isliye bottem se margin deni hogi or vo margin Bottem Navigation(jiski actionbar ki size k equal) k height k equal hogi-->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/nav_items" />

    <!--    // now create a menu file-->


</RelativeLayout>